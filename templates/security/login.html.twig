{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ company }}{% endblock %}

{% block body %}
    <div class="flex flex-col items-center gap-5 px-[10%] pt-32">
        <form method="post">
            {% if error %}
                <div class="alert alert-error shadow-lg">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                </div>
            {% endif %}

            <h1 class="font-title text-4xl">Connexion</h1>
            <div class="mb-5">
                <a href="{{ path('app_register') }}" class="link text-sm">Pas encore de compte ?</a>
            </div>
            <div class="flex flex-col gap-3 w-full">
                <div class="flex flex-col w-full">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input input-bordered" autocomplete="email" required autofocus>
                </div>
                <div class="flex flex-col w-full">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="input input-bordered" autocomplete="current-password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-primary mt-5" type="submit">
                Connexion
            </button>
        </form>
    </div>
{% endblock %}
